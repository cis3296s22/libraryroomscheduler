#:kivy 2.0

<LoginScreen>:
    id: 'login'

    GridLayout:
        cols: 10
        pos_hint: {'center_x' : .5, 'center_y': .5}  
        size_hint: None, None
        size: root.width * .5, root.width * .05
        
        Button:
            text: 'Login'
            background_normal:''
            background_color: (140/255.0,178/255.0,150/255.0,1)
            on_press: 
                app.login(username.text, password.text)
                username.text = ''
                password.text = ''

        TextInput:
            id: username
            hint_text: 'Username'
        TextInput:
            id: password
            hint_text: 'Password'
            password: True
            password_mask: "*"


<BookingScreen>:
    GridLayout:
        rows: 10
        pos_hint: {'center_x' : .5, 'center_y': .5}  
        size_hint: None, None
        size: root.width * .5, root.width * .5
  
        TextInput:
            id: date
            hint_text: 'Enter Date of Booking [FORMAT MM-dd-YYYY]: '
        Button:
            text: 'Show Calendar'
            background_normal:''
            background_color: (140/255.0,178/255.0,150/255.0,1)
            on_press: 
                app.showcal()
        TextInput:
            id: roomSize
            hint_text: 'Enter Room Size: [LARGE or SMALL]: '

        TextInput:
            id: roomNumber
            hint_text: 'Enter Room #: '
        TextInput:
            id: time
            hint_text: 'Enter Time [FORMAT H:MMpm or H:MMam]: '

        Button:
            id: submit
            text: 'Submit'
            on_press: app.bookRoom(roomSize.text, time.text, roomNumber.text, date.text)


        Button:
            text: 'Back to Login'
            on_press:
                app.switchPage(app.loginScreen)



 



