#:kivy 2.0

<BookingScreen>:
    GridLayout:
        rows: 10
        pos_hint: {'center_x' : .5, 'center_y': .5}  
        size_hint: None, None
        size: root.width * .5, root.width * .5
  
        TextInput:
            id: date
            hint_text: 'Date of Booking: [MM-dd-YYYY]'
        TextInput:
            id: roomSize
            hint_text: 'Room Size: [LARGE or SMALL]'

        TextInput:
            id: roomNumber
            hint_text: 'Room #: '
        TextInput:
            id: time
            hint_text: 'Time: [H:MMpm or H:MMam]'

        Button:
            id: submit
            text: 'Submit'
            on_press: app.bookRoom(roomSize.text, time.text, roomNumber.text, date.text)



 



